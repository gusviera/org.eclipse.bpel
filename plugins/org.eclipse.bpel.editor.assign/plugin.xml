<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.bpel.editor.assign.AssignFormEditor"
            default="false"
            id="org.eclipse.bpel.editor.assign"
            name="%bpelAssignEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
            <command
                  commandId="org.eclipse.bpel.editor.assign.openAssignEditorDialog"
                  icon="icons/arrow_switch.png"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.bpel.editor.assign.OpenAssignEditorHandler"
            id="org.eclipse.bpel.editor.assign.openAssignEditor"
            name="%openAssignEditorInTab">
      </command>
      <command
            defaultHandler="org.eclipse.bpel.editor.assign.OpenAssignEditorWizardHandler"
            id="org.eclipse.bpel.editor.assign.openAssignEditorDialog"
            name="%openAssignEditorInDialog">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.bpel.editor.assign.OpenAssignEditorWizardHandler"
            commandId="org.eclipse.ui.navigate.goInto">
         <enabledWhen>
            <with variable="selection">
               <and>
	              <count value="1"/>
		           <iterate operator="and">
		              <instanceof value="org.eclipse.bpel.model.Assign"/>
		           </iterate>
		       </and>
            </with>
         </enabledWhen>
      </handler>
   </extension>

</plugin>
